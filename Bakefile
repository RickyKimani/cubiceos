task templ:
  description: Compile .templ files
  cmd: templ generate --watch --proxy="http://localhost:8090" --open-browser=false

task tailwind:
  description: Compile CSS files
  cmd: npx @tailwindcss/cli -i ./internal/web/assets/css/input.css -o ./internal/web/assets/css/output.css --watch

task run:
  description: Run the web server
  deps: templ, tailwind
  cmd: go run ./cmd/web-test